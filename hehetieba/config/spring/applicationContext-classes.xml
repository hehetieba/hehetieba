<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<bean id="classesAction" class="com.yzh.s2sh_test.action.ClassesAction" scope="prototype">
		<property name="iClassesService">
			<ref bean="classesService"/>
		</property>
	</bean>

	<bean id="classesService" class="com.yzh.s2sh_test.service.impl.ClassesService">
		<property name="iClassesDao">
			<ref bean="classesDao"/>
		</property>
	</bean>

	<bean id="classesDao" class="com.yzh.s2sh_test.dao.impl.ClassesDao">
		<property name="sessionFactory">
			<ref bean="sessionFactory"/>
		</property>
	</bean>
</beans>
